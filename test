import pandas as pd 
import matplotlib.pyplot as plt
import seaborn as sns

df = pd.read_csv("cleaned_hotel_bookings.csv")

df['price_per_person'] = df['adr'] / (
    df['adults'] + df['children'] + df['babies']
)

# Remove unrealistic or zero prices
df = df[df['price_per_person'] > 0]

plt.figure(figsize=(12,6))

sns.boxplot(
    x='assigned_room_type',
    y='price_per_person',
    hue='hotel',
    data=df
)

plt.title("Price of Room Types per Night and Person")
plt.xlabel("Room Type")
plt.ylabel("Price per Person per Night (EUR)")
plt.legend(title="Hotel Type")
plt.show()